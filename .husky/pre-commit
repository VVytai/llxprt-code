#!/bin/bash
# Pre-commit hook to ensure code quality
# This runs automatically before each commit

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running pre-commit checks...${NC}"

# Only check staged files for linting
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM)

if [ -z "$STAGED_FILES" ]; then
    echo "No staged files to check"
    exit 0
fi

# Check if any TypeScript/JavaScript files are staged
TS_JS_FILES=$(echo "$STAGED_FILES" | grep -E '\.(ts|tsx|js|jsx)$' || true)

if [ -n "$TS_JS_FILES" ]; then
    echo -e "${YELLOW}Checking TypeScript/JavaScript files...${NC}"
    
    # Run ESLint on staged files
    if echo "$TS_JS_FILES" | xargs npx eslint --max-warnings 0; then
        echo -e "${GREEN}✓ ESLint passed${NC}"
    else
        echo -e "${RED}✗ ESLint failed. Please fix linting errors.${NC}"
        exit 1
    fi
    
    # Check formatting on staged files
    if echo "$TS_JS_FILES" | xargs npx prettier --check; then
        echo -e "${GREEN}✓ Prettier check passed${NC}"
    else
        echo -e "${RED}✗ Formatting issues found. Run 'npm run format' to fix.${NC}"
        exit 1
    fi
fi

# Check if any YAML files are staged
YAML_FILES=$(echo "$STAGED_FILES" | grep -E '\.(yaml|yml)$' || true)

if [ -n "$YAML_FILES" ] && command -v yamllint &> /dev/null; then
    echo -e "${YELLOW}Checking YAML files...${NC}"
    if echo "$YAML_FILES" | xargs yamllint; then
        echo -e "${GREEN}✓ yamllint passed${NC}"
    else
        echo -e "${RED}✗ YAML linting failed${NC}"
        exit 1
    fi
fi

# Check if any shell scripts are staged
SHELL_FILES=$(echo "$STAGED_FILES" | grep -E '\.(sh|bash|zsh)$' || true)

if [ -n "$SHELL_FILES" ] && command -v shellcheck &> /dev/null; then
    echo -e "${YELLOW}Checking shell scripts...${NC}"
    if echo "$SHELL_FILES" | xargs shellcheck; then
        echo -e "${GREEN}✓ shellcheck passed${NC}"
    else
        echo -e "${RED}✗ Shell script linting failed${NC}"
        exit 1
    fi
fi

echo -e "${GREEN}✓ All pre-commit checks passed!${NC}"