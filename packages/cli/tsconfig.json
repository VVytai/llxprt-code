{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node"]
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "src/**/*.tsx", 
    "src/**/*.json",
    "./package.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**/*",
    "**/test/**/*",
    "**/tests/**/*",
    "**/test-utils/**/*",
    "integration-tests/**/*"
  ],
  "references": [{ "path": "../core" }]
}
